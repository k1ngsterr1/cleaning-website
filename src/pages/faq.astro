---
import Layout from "src/layouts/Layout.astro";
import Main from "@widgets/HomePage/Main/index.astro";
import Book from "@widgets/HomePage/Book/index.astro";
import FAQ from "@widgets/FAQ/index.astro";
import { Form } from "@widgets/Form/index";
import { Footer } from "@features/Footer/index";

import faq_image from "@assets/images/faq_photo.webp";
---

<Layout title="Zaka Cleaning Services in Chicago" description="Get answers to common questions about our cleaning services at Zaka in Chicago. Find information on pricing, scheduling, and more. Contact us for details.">
  <Main
    title="FREQUENTLY ASKED QUESTIONS"
    paragraph="Find answers to common queries about Zaka's services."
    image={faq_image}
  />
  <div class="mt-100 pt-96 w-full content">
    <FAQ />
  </div>
  <Book />
  <Form client:idle />
  <Footer client:idle />
</Layout>
